<thlogic>


    <attr sel="#babysitterNameId"
          th:text="'Przeglądasz szczegóły opiekunki: ' + ${babysitter.name}"/>

    <attr sel="#showBabysittersShiftsId"
          th:each="tempBabysitter : ${babysitter.shifts}"/>
    <attr sel="#dateId"
          th:text="${tempBabysitter.startShift.toLocalDate()}"/>
    <attr sel="#startShiftId"
          th:text="${tempBabysitter.startShift.toLocalTime()}"/>
    <attr sel="#endShiftId"
          th:text="${tempBabysitter.endShift.toLocalTime()}"/>
    <attr sel="#addShiftId"
          th:href="@{/shift/addShift(babysitterId=${babysitter.id})}" th:text="'Dodaj zmianę'"/>
    <attr sel="#editShiftId"
          th:href="@{/shift/updateShift(shiftId=${tempBabysitter.id})}" th:text="'Edytuj'"/>
    <attr sel="#deleteShiftId"
          th:href="@{/shift/deleteShift(shiftId=${tempBabysitter.id})}" th:text="'Usuń'"/>

    <attr sel="#backId"
          th:href="@{/shift/showAllShifts}" th:text="'Powrót'"/>

</thlogic>
