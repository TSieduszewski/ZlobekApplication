<thlogic>
    <attr sel="#shiftFormId"
          action="#" th:action="@{/shift/saveShift}" th:object="${shift}" method="POST"/>

    <attr sel="#babysitterIdId"
          type="hidden" th:field="*{idOfBabysitter}"/>
    <attr sel="#shiftId"
          type="hidden" th:field="*{shift.id}"/>
    <attr sel="#startShiftId"
          type="datetime-local" th:field="*{shift.startShift}"/>
    <attr sel="#alertStartShiftId"
          th:if="${#fields.hasErrors()}" th:text="'Data początkowa musi być wcześniej, niż data końcowa, oraz zmiana nie może być dłuższa niż 10 godzin'"/>
    <attr sel="#endShiftId"
          type="datetime-local" th:field="*{shift.endShift}"/>
    <attr sel="#backId"
          th:href="${url}" th:text="Powrót"/>
    <attr sel="#footerId"
          th:replace="~{fragments/footer::footerFragment}"/>
</thlogic>
