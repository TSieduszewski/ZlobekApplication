<thlogic>
    <attr sel="#check"
          th:if="${paymentPreviousMonth != null}"/>
    <attr sel="#tuitionId"
          th:text="${payment.tuition}"/>
    <attr sel="#previousMonthTuitionId"
          th:text="${paymentPreviousMonth.tuition}"/>
    <attr sel="#mealsId"
          th:text="${payment.meals}"/>
    <attr sel="#previousMonthMealsId"
          th:text="${paymentPreviousMonth.meals}"/>
    <attr sel="#summaryId"
          th:text="${payment.summary}"/>
    <attr sel="#previousMonthSummaryId"
          th:text="${paymentPreviousMonth.summary}"/>
    <attr sel="#monthId"
          th:text="${month}"/>
    <attr sel="#previousMonthId"
          th:text="${previousMonth}"/>
    <attr sel="#showAttendanceId"
          th:each="tempAttendance : ${attendance}"/>
    <attr sel="#attendanceDateId"
          th:text="${#temporals.format(tempAttendance.attendanceDate, 'dd-MM-yyyy')}"/>
    <attr sel="#attendanceStatusId"
          th:text="${tempAttendance.verification == tempAttendance.attendant} ? '0 zł' : '10 zł'"/>
    <attr sel="#footerId"
          th:replace="~{fragments/footer::footerFragment}"/>
</thlogic>