<thlogic>
    <attr sel="#parentFirstNameAndLastNameId"
          th:text="${singleParent.parentFirstName} + ' ' + ${singleParent.parentLastName}"/>
    <attr sel="#childrenFirstNameId"
          th:text="${singleParent.childrenFirstName}"/>
    <attr sel="#childrenLastNameId"
          th:text="${singleParent.childrenLastName}"/>
    <attr sel="#addressId"
          th:text="${singleParent.address}"/>
    <attr sel="#phoneNumberId"
          th:text="${singleParent.phoneNumber}"/>
    <attr sel="#emailId"
          th:text="${singleParent.email}"/>

    <attr sel="#showMessagesId"
          th:each="tempMessages : ${messages}"/>
    <attr sel="#messageId"
          th:text="${tempMessages.message}"/>
    <attr sel="#messageDateId"
          th:text="${#temporals.format(tempMessages.date, 'dd-MM-yyyy HH:mm')}"/>

    <attr sel="#totalPagesId"
          th:if="${messages.totalPages > 0}" th:each="pageNumber : ${pageNumbers}"/>
    <attr sel="#ifStatementId"
          th:if="${pageNumber==messages.number + 1}"/>
    <attr sel="#ifStatementButtonId"
          th:if="${pageNumber!=messages.number + 1}"/>
    <attr sel="#pageId"
          th:href="@{/parents/showSingleParentMessages(parentId=${singleParent.id}, page=${pageNumber}, size=${messages.size})}"
          th:text=${pageNumber}/>

    <attr sel="#backId"
          th:href="list" th:text="PowrÃ³t"/>
    <attr sel="#headerId"
          th:replace="~{fragments/footer::headerFragment}"/>

</thlogic>