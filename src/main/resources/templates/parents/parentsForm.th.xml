<thlogic>
    <attr sel="#parentFormId"
          action="#" th:action="@{/parents/saveParent}" th:object="${parent}" method="POST"/>

    <attr sel="#parentId"
          type="hidden" th:field="*{id}"/>
    <attr sel="#parentNameId"
          type="text" th:field="*{parentFirstName}" th:placeholder="'Wpisz imię rodzica'"/>
    <attr sel="#parentSurnameId"
          type="text" th:field="*{parentLastName}" th:placeholder="'Wpisz nazwisko rodzica'"/>
    <attr sel="#childrenNameId"
          type="text" th:field="*{childrenFirstName}" th:placeholder="'Wpisz imię dziecka'"/>
    <attr sel="#childrenSurnameId"
          type="text" th:field="*{childrenLastName}" th:placeholder="'Wpisz nazwisko dziecka'"/>
    <attr sel="#addressId"
          type="text" th:field="*{address}" th:placeholder="'Wpisz adres zamieszkania'"/>
    <attr sel="#phoneId"
          type="text" th:field="*{phoneNumber}" th:placeholder="'Wpisz telefon'"/>
    <attr sel="#emailId"
          type="text" th:field="*{email}" th:placeholder="'Wpisz email'"/>
    <attr sel="#backId"
          th:href="'/parents/list'" th:text="Powrót"/>
    <attr sel="#footerId"
          th:replace="~{fragments/footer::footerFragment}"/>
</thlogic>
