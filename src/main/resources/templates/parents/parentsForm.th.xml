<thlogic>
    <attr sel="#parentFormId"
          action="#" th:action="@{/parents/saveParent}" th:object="${parent}" method="POST"/>

    <attr sel="#parentId"
          type="hidden" th:field="*{id}"/>
    <attr sel="#parentNameId"
          type="text" th:field="*{parentFirstName}" th:placeholder="'Imię rodzica'"/>
    <attr sel="#parentSurnameId"
          type="text" th:field="*{parentLastName}" th:placeholder="'Nazwisko rodzica'"/>
    <attr sel="#childrenNameId"
          type="text" th:field="*{childrenFirstName}" th:placeholder="'Imię dziecka'"/>
    <attr sel="#childrenSurnameId"
          type="text" th:field="*{childrenLastName}" th:placeholder="'Nazwisko rodzica'"/>
    <attr sel="#addressId"
          type="text" th:field="*{address}" th:placeholder="'Adres zamieszkania'"/>
    <attr sel="#phoneId"
          type="text" th:field="*{phoneNumber}" th:placeholder="'Telefon'"/>
    <attr sel="#emailId"
          type="text" th:field="*{email}" th:placeholder="'Email'"/>

    <attr sel="#footerId"
          th:replace="~{fragments/footer::footerFragment}"/>
</thlogic>
