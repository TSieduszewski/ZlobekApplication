<thlogic>
    <attr sel="#showParentsId"
          th:each="tempParent : ${parents}"/>

    <attr sel="#parentFinalId"
          th:text="${tempParent.id}"/>
    <attr sel="#parentFirstNameId"
          th:text="${tempParent.parentFirstName}"/>
    <attr sel="#parentLastNameId"
          th:text="${tempParent.parentLastName}"/>
    <attr sel="#childrenFirstNameId"
          th:text="${tempParent.childrenFirstName}"/>
    <attr sel="#childrenLastNameId"
          th:text="${tempParent.childrenLastName}"/>
    <attr sel="#addressId"
          th:text="${tempParent.address}"/>
    <attr sel="#phoneNumberId"
          th:text="${tempParent.phoneNumber}"/>
    <attr sel="#emailId"
          th:text="${tempParent.email}"/>
    <attr sel="#showMessagesId"
          th:href="@{/parents/showSingleParentMessages(parentId=${tempParent.id})}" th:text="Zobacz"/>
    <attr sel="#checkboxId"
          type="checkbox" th:field="${listOfParents.selectedParents}" th:value="${tempParent.id}"/>
    <attr sel="#sendMessageButtonId"
          th:href="@{/messages/showFormForAddMessage(parentId=${tempParent.id})}"  th:text="'Wyślij wiadomość'"/>
    <attr sel="#listOfParentsMessageIdId"
          type="hidden" th:field="${listOfParents.message.id}"/>
    <attr sel="#listOfParentsMessageMessageId"
          type="text" th:field="${listOfParents.message.message}" id="messageLabel"/>
    <attr sel="#formSendToAllId"
          action="#" th:action="@{/messages/save}" th:object="${listOfParents}" method="POST"/>
    <attr sel="#tempParentIdId"
          type="hidden" name="selectedParents" th:value="${tempParent.id}"/>
    <attr sel="#mainFormId"
          th:action="@{/messages/save}" method="POST"/>
    <attr sel="#addParent"
          th:href="@{/parents/addParent}" th:text="'Dodaj nowych rodziców'"/>
    <attr sel="#editParentId"
          th:href="@{/parents/updateParent(parentId=${tempParent.id})}" th:text="'Edytuj'"/>
    <attr sel="#deleteParentId"
          th:href="@{/parents/deleteParent(parentId=${tempParent.id})}" th:text="'Usuń'"/>

    <attr sel="#footerId"
          th:replace="~{fragments/footer::footerFragment}"/>
    <attr sel="#headerId"
          th:replace="~{fragments/footer::headerFragment}"/>
</thlogic>
