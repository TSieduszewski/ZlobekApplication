<thlogic>
    <attr sel="#showParentsId"
          th:each="tempParent : ${parents}"/>

    <attr sel="#parentFirstNameId"
          th:text="${tempParent.parentFirstName}"/>
    <attr sel="#parentLastNameId"
          th:text="${tempParent.parentLastName}"/>
    <attr sel="#childrenFirstNameId"
          th:text="${tempParent.childrenFirstName}"/>
    <attr sel="#childrenLastNameId"
          th:text="${tempParent.childrenLastName}"/>
    <attr sel="#addressId"
          th:text="${tempParent.address}"/>
    <attr sel="#phoneNumberId"
          th:text="${tempParent.phoneNumber}"/>
    <attr sel="#emailId"
          th:text="${tempParent.email}"/>

    <attr sel="#showMessagesId"
          th:href="@{/parents/showSingleParentMessages(parentId=${tempParent.id})}" th:text="Zobacz"/>

</thlogic>
