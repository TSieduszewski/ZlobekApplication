<thlogic>

    <attr sel="#parentAndChildrenId"
          th:text="'Przeglądasz zestawienie obecności/nieobecności rodzica '
          + ${singleParent.parentFirstName} + ' ' + ${singleParent.parentLastName}
          + ' (dziecko: ' + ${singleParent.childrenFirstName} + ' ' + ${singleParent.childrenLastName} +'):'"/>
    <attr sel="#showAttendanceId"
          th:each="tempAttendance : ${singleAttendanceList}"/>
    <attr sel="#attendanceDateId"
          th:text="${#temporals.format(tempAttendance.attendanceDate, 'dd-MM-yyyy')}"/>
    <attr sel="#attendanceStatusId"
          th:text="${tempAttendance.verification} ? 'Obecność' : 'Nieobecność'"/>
    <attr sel="#backId"
          th:href="'/attendance/showAttendanceOfAllParents'" th:text="Powrót"/>
</thlogic>