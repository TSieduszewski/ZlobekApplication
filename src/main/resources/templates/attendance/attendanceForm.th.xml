<thlogic>
    <attr sel="#showAttendanceId"
          th:each="tempAttendance : ${attendanceList}"/>

    <attr sel="#attendanceDateId"
          th:text="${#temporals.format(tempAttendance.attendanceDate, 'dd-MM-yyyy')}"/>

    <attr sel="#attendanceStatusId"
          th:text="${tempAttendance.attendant} ? 'Obecność' : 'Nieobecność'"/>
    <attr sel="#attendanceButtonStatusId"
          th:href="@{/attendance/change(attendanceId=${tempAttendance.id})}" th:text="${tempAttendance.attendant} ? 'Zmień na nieobecność' : 'Zmień na obecność'"/>
    <attr sel="#footerId"
          th:replace="~{fragments/footer::footerFragment}"/>
    <attr sel="#headerId"
          th:replace="~{fragments/footer::headerFragment}"/>
</thlogic>
