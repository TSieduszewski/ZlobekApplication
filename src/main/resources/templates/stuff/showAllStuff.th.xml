<thlogic>
    <attr sel="#showStuffId"
          th:each="tempStuff : ${listOfAllStuff}"/>

    <attr sel="#parentFirstNameId"
          th:text="${tempStuff.parent.parentFirstName}"/>
    <attr sel="#parentLastNameId"
          th:text="${tempStuff.parent.parentLastName}"/>
    <attr sel="#childrenFirstNameId"
          th:text="${tempStuff.parent.childrenFirstName}"/>
    <attr sel="#childrenLastNameId"
          th:text="${tempStuff.parent.childrenLastName}"/>
    <attr sel="#dryWipesId"
          th:text="${tempStuff.dryWipes}"/>
    <attr sel="#wetWipesId"
          th:text="${tempStuff.wetWipes}"/>
    <attr sel="#diapersId"
          th:text="${tempStuff.diapers}"/>
    <attr sel="#towelsId"
          th:text="${tempStuff.towels}"/>
    <attr sel="#bibsId"
          th:text="${tempStuff.bibs}"/>

    <attr sel="#addBibsId"
          th:href="@{/babystuff/update(parentId=${tempStuff.parent.id}, change=1, stuff='bibs')}"/>
    <attr sel="#removeBibsId"
          th:href="@{/babystuff/update(parentId=${tempStuff.parent.id}, change=-1, stuff='bibs')}"/>

    <attr sel="#addTowelsId"
          th:href="@{/babystuff/update(parentId=${tempStuff.parent.id}, change=1, stuff='towels')}"/>
    <attr sel="#removeTowelsId"
          th:href="@{/babystuff/update(parentId=${tempStuff.parent.id}, change=-1, stuff='towels')}"/>

    <attr sel="#addDiapersId"
          th:href="@{/babystuff/update(parentId=${tempStuff.parent.id}, change=1, stuff='diapers')}"/>
    <attr sel="#removeDiapersId"
          th:href="@{/babystuff/update(parentId=${tempStuff.parent.id}, change=-1, stuff='diapers')}"/>

    <attr sel="#addWetWipesId"
          th:href="@{/babystuff/update(parentId=${tempStuff.parent.id}, change=1, stuff='wetWipes')}"/>
    <attr sel="#removeWetWipesId"
          th:href="@{/babystuff/update(parentId=${tempStuff.parent.id}, change=-1, stuff='wetWipes')}"/>

    <attr sel="#addDryWipesId"
          th:href="@{/babystuff/update(parentId=${tempStuff.parent.id}, change=1, stuff='dryWipes')}"/>
    <attr sel="#removeDryWipesId"
          th:href="@{/babystuff/update(parentId=${tempStuff.parent.id}, change=-1, stuff='dryWipes')}"/>

    <attr sel="#updateAllStuff"
          th:href="@{/babystuff/showFormForUpdateStuff(parentId=${tempStuff.parent.id})}" th:text="'Zaktualizuj'"/>
    <attr sel="#headerId"
          th:replace="~{fragments/footer::headerFragment}"/>

    <attr sel="#footerId"
          th:replace="~{fragments/footer::footerFragment}"/>
</thlogic>
